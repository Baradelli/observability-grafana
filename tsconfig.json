{
  "$schema": "https://json.schemastore.org/tsconfig",
  "_version": "20.1.0",
  "include": ["src/**/*", "@types/*.d.ts"],

  "compilerOptions": {
    "lib": ["es2023"],
    "module": "nodenext",
    "target": "es2022",

    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "moduleResolution": "node16"
  }
}
